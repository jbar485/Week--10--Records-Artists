<h1>Primary Records</h1>

<h3>Available Records:</h3>

<% if @albums.any? %>
<ul>
  <% @albums.each do |album| %>
  <li><a href="/albums/<%= album.id %>"> <%= album.name %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no records to display.</p>
<% end %>
<a href="/albums/new">Add a new album</a>
<br>
<form action="/search" method="get">
  <label for="query">Search</label>
  <input id="query" name="query" class="form-control" type="text">
  <button type="submit" class="btn">Go!</button>
</form>

<form action="/sort_cost" method="get">
  <input class="form-control" type="hidden">
  <button type="submit" class="btn">Sort by Cost (ascending)</button>
</form>

<form action="/sort_cost_descending" method="get">
  <input class="form-control" type="hidden">
  <button type="submit" class="btn">Sort by Cost (descending)</button>
</form>

<form action="/sort_year" method="get">
  <input class="form-control" type="hidden">
  <button type="submit" class="btn">Sort by Year (ascending)</button>
</form>

<form action="/sort_year_descending" method="get">
  <input class="form-control" type="hidden">
  <button type="submit" class="btn">Sort by Year (descending)</button>
</form>
<br>
<br>
<br>
<form action="/albums/destroy" method="get">
  <input class="form-control" type="hidden">
  <button id="destroy" type="submit" class="btn">Destroy All Records</button>
</form>
<form action="/artists" method="get">
  <input class="form-control" type="hidden">
  <button type="submit" class="btn">ARTISTS!</button>
</form>
